<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondLevelActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/level_two">

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/text_grid"
            android:text="Free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/watch" />

        <TextView
            android:id="@+id/levelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:gravity="center"
            android:text="Level two"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/counterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="7.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/towel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/towel" />

        <ImageView
            android:id="@+id/panier"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/panier" />

        <ImageView
            android:id="@+id/bell_pepper"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110dp"
            android:layout_marginTop="50dp"
            android:onClick="bellPepperClicked"
            app:srcCompat="@drawable/bell_pepper" />

        <ImageView
            android:id="@+id/tomato"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="60dp"
            android:onClick="tomatoClicked"
            app:srcCompat="@drawable/tomato" />

        <ImageView
            android:id="@+id/red_chillies"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="55dp"
            android:onClick="redChilliesClicked"
            app:srcCompat="@drawable/red_chillies" />

        <ImageView
            android:id="@+id/potato"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="100dp"
            android:onClick="potatoClicked"
            app:srcCompat="@drawable/potato" />

        <ImageView
            android:id="@+id/lemon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="130dp"
            android:layout_marginTop="90dp"
            android:rotation="90"
            android:onClick="lemonClicked"
            app:srcCompat="@drawable/lemon" />

        <ImageView
            android:id="@+id/onion1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="110dp"
            android:layout_marginRight="10dp"
            android:onClick="onionClicked"
            app:srcCompat="@drawable/onion" />

        <ImageView
            android:id="@+id/onion2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="125dp"
            android:layout_marginRight="40dp"
            android:rotation="90"
            app:srcCompat="@drawable/onion" />

        <ImageView
            android:id="@+id/spinach"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:rotation="-30"
            android:onClick="spinachClicked"
            app:srcCompat="@drawable/spinach" />

        <ImageView
            android:id="@+id/broccoli"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:onClick="broccoliClicked"
            app:srcCompat="@drawable/broccoli" />

        <ImageView
            android:id="@+id/cauliflower"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            android:onClick="cauliflowerClicked"
            app:srcCompat="@drawable/cauliflower" />

        <ImageView
            android:id="@+id/artichoke"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:onClick="artichokeClicked"
            app:srcCompat="@drawable/artichoke" />

        <ImageView
            android:id="@+id/cabbage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="200dp"
            android:onClick="cabbageClicked"
            app:srcCompat="@drawable/cabbage" />

        <ImageView
            android:id="@+id/fennel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="180dp"
            android:onClick="fennelClicked"
            app:srcCompat="@drawable/fennel" />

        <ImageView
            android:id="@+id/sweet_potato"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="160dp"
            android:rotation="30"
            android:onClick="sweetPotatoClicked"
            app:srcCompat="@drawable/sweet_potato" />

        <ImageView
            android:id="@+id/zucchini"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="210dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:onClick="zucchiniClicked"
            app:srcCompat="@drawable/zucchini" />

        <ImageView
            android:id="@+id/pea1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="300dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:rotation="-90"
            android:onClick="peaClicked"
            app:srcCompat="@drawable/pea" />

        <ImageView
            android:id="@+id/pea2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="300dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:rotation="-90"
            app:srcCompat="@drawable/pea" />

        <ImageView
            android:id="@+id/basket_apples"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="140dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="130dp"
            android:rotation="90"
            app:srcCompat="@drawable/basket_apples" />

        <ImageView
            android:id="@+id/pumpkin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:onClick="pumpkinClicked"
            app:srcCompat="@drawable/pumpkin" />

        <ImageView
            android:id="@+id/eggplant1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_alignParentRight="true"
            android:rotation="45"
            android:onClick="eggplantClicked"
            app:srcCompat="@drawable/eggplant" />

        <ImageView
            android:id="@+id/eggplant2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"
            android:rotation="45"
            app:srcCompat="@drawable/eggplant" />

        <ImageView
            android:id="@+id/carrots"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="200dp"
            android:onClick="carrotsClicked"
            app:srcCompat="@drawable/carrots" />

        <ImageView
            android:id="@+id/beetroot"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_alignParentRight="true"
            android:onClick="beetrootClicked"
            app:srcCompat="@drawable/beetroot" />

        <ImageView
            android:id="@+id/basket_fruit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/basket_fruit" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImageSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="90dp"
            android:paddingEnd="90dp"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>
</LinearLayout>