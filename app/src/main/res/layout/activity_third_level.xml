<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ThirdLevelActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/level_three">

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/countDownTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/watch" />

        <TextView
            android:id="@+id/levelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:gravity="center"
            android:text="Level three"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/counterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="7.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">



        <ImageView
            android:id="@+id/bird"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="200dp"
            android:onClick="birdClicked"
            app:srcCompat="@drawable/bird" />

        <ImageView
            android:id="@+id/monkey"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="160dp"
            android:onClick="monkeyClicked"
            app:srcCompat="@drawable/monkey"/>

        <ImageView
            android:id="@+id/raccoon"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="170dp"
            android:onClick="raccoonClicked"
            app:srcCompat="@drawable/raccoon_preview" />

        <ImageView
            android:id="@+id/snake"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="5dp"
            android:rotation="-45"
            android:onClick="snakeClicked"
            app:srcCompat="@drawable/snake_preview" />

        <ImageView
            android:id="@+id/tortoise"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="190dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130dp"
            android:onClick="tortoiseClicked"
            app:srcCompat="@drawable/tortoise"/>

        <ImageView
            android:id="@+id/gazelle"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:onClick="gazelleClicked"
            app:srcCompat="@drawable/gazelle" />

        <ImageView
            android:id="@+id/hedgehog"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="240dp"
            android:layout_marginLeft="10dp"
            android:onClick="hedgehogClicked"
            app:srcCompat="@drawable/hedgehog" />

        <ImageView
            android:id="@+id/snail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="50dp"
            android:onClick="snailClicked"
            android:rotation="-45"
            app:srcCompat="@drawable/snail"/>

        <ImageView
            android:id="@+id/hippo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="70dp"
            android:onClick="hippoClicked"
            app:srcCompat="@drawable/hippo" />

        <ImageView
            android:id="@+id/frog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="30dp"
            android:onClick="frogClicked"
            app:srcCompat="@drawable/frog"/>

        <ImageView
            android:id="@+id/duck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="140dp"
            android:onClick="duckClicked"
            app:srcCompat="@drawable/duck"/>

        <ImageView
            android:id="@+id/gold_fish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"
            android:layout_marginLeft="170dp"
            android:onClick="goldFishClicked"
            app:srcCompat="@drawable/gold_fish"/>

        <ImageView
            android:id="@+id/giraffe"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="140dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:onClick="giraffeClicked"
            app:srcCompat="@drawable/giraffe" />


        <ImageView
            android:id="@+id/owl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:onClick="owlClicked"
            app:srcCompat="@drawable/owl" />

        <ImageView
            android:id="@+id/woodpecker"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:onClick="woodpeckerClicked"
            app:srcCompat="@drawable/woodpecker" />


            <Button
                android:id="@+id/levelsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levels Menu"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:shadowColor="#333333"
                android:shadowRadius="2"
                android:shadowDx="2"
                android:shadowDy="2"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:outlineSpotShadowColor="@color/white"
                android:padding="10dp"
                android:background="@drawable/rounded_corner"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="levelsBtnClicked"/>

            <Button
                android:id="@+id/retryBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try Again"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:shadowColor="#333333"
                android:shadowRadius="2"
                android:shadowDx="2"
                android:shadowDy="2"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:outlineSpotShadowColor="@color/white"
                android:padding="10dp"
                android:background="@drawable/rounded_corner"
                android:layout_below="@id/levelsBtn"
                android:layout_centerHorizontal="true"
                android:onClick="retryBtnClicked"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImageSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>
</LinearLayout>