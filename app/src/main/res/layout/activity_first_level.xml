<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidproject.FirstLevelActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/level_one">

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/text_grid"
            android:text="Free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/watch" />

        <TextView
            android:id="@+id/levelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:gravity="center"
            android:text="Level One"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/counterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowRadius="2"
            android:shadowDx="2"
            android:shadowDy="2"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="7.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <ImageView
            android:id="@+id/bird"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:onClick="birdClicked"
            app:srcCompat="@drawable/bird" />

        <ImageView
            android:id="@+id/raccoon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:onClick="raccoonClicked"
            app:srcCompat="@drawable/raccoon_preview" />

        <ImageView
            android:id="@+id/snake"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="200dp"
            android:onClick="snakeClicked"
            app:srcCompat="@drawable/snake_preview" />

        <ImageView
            android:id="@+id/gazelle"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:onClick="gazelleClicked"
            app:srcCompat="@drawable/gazelle" />

        <ImageView
            android:id="@+id/hedgehog"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="180dp"
            android:onClick="hedgehogClicked"
            app:srcCompat="@drawable/hedgehog" />

        <ImageView
            android:id="@+id/hippo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:onClick="hippoClicked"
            app:srcCompat="@drawable/hippo" />

        <ImageView
            android:id="@+id/giraffe"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="giraffeClicked"
            app:srcCompat="@drawable/giraffe" />


        <ImageView
            android:id="@+id/owl"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:onClick="owlClicked"
            app:srcCompat="@drawable/owl" />

        <ImageView
            android:id="@+id/woodpecker"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:onClick="woodpeckerClicked"
            app:srcCompat="@drawable/woodpecker" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImageSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

</LinearLayout>